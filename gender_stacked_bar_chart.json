{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {"text": "Monthly Tourist Arrivals Trends Across Years", "anchor": "start"},
  "background": "transparent",
  "width": 700, "height": 200,
  "data": {"url": "foreign_arrivals.csv"},

  "params": [
    {
      "name": "selectCountry",
      "bind": {"input": "select", "name": "Country ", "options": ["All","Singapore","China","Indonesia","Thailand","Brunei"]},
      "value": "All"
    }
  ],

  "transform": [
  
    {
      "lookup": "country",
      "from": {
        "data": {
          "values": [
            {"code":"SGP","name":"Singapore"},
            {"code":"CHN","name":"China"},
            {"code":"IDN","name":"Indonesia"},
            {"code":"THA","name":"Thailand"},
            {"code":"BRN","name":"Brunei"}
          ]
        },
        "key": "code",
        "fields": ["name"]
      },
      "as": "country_name"
    },

    {"calculate": "toDate(datum.date)", "as": "dt"},
    {"calculate": "year(datum.dt)", "as": "year"},
    {"calculate": "month(datum.dt)", "as": "month"},
    {"calculate": "timeFormat(datum.dt, '%b')", "as": "month_name"},

  
    {"filter": "selectCountry == 'All' || datum.country_name == selectCountry"},


    {"aggregate": [{"op": "sum", "field": "arrivals", "as": "total"}], "groupby": ["year", "month", "month_name"]}
  ],

  "mark": "rect",

  "encoding": {
    "x": {
      "field": "month_name",
      "type": "ordinal",
      "sort": {"field": "month", "order": "ascending"},
      "title": null,
      "axis": {"labelAngle": 0}
    },
    "y": {"field": "year", "type": "ordinal", "title": null},
    "color": {
      "field": "total",
      "type": "quantitative",
      "scale": {"scheme": "blues"},
      "legend": {"title": null, "orient": "bottom", "direction": "horizontal"}
    },
    "tooltip": [
      {"field": "year", "title": "Year"},
      {"field": "month_name", "title": "Month"},
      {"field": "total", "title": "Arrivals", "format": ","}
    ]
  },

  "config": {
    "axis": {"labelFontSize": 12},
    "view": {"stroke": "transparent"},
    "legend": {"labelFontSize": 11}
  }
}
