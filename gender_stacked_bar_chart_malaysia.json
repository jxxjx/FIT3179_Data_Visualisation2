{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {"text": "Gender Composition of Foreign Arrivals by Country (2023)", "anchor": "start"},
  "width": 800, "height": 480,
  "data": {"url": "foreign_arrivals.csv"},
  "transform": [
    {"calculate": "toDate(datum.date)", "as": "dt"},
    {"filter": "year(datum.dt) == 2023"},
    {"aggregate": [
      {"op": "sum", "field": "arrivals_male", "as": "male"},
      {"op": "sum", "field": "arrivals_female", "as": "female"}
    ], "groupby": ["poe"]},
    {"calculate": "datum.male + datum.female", "as": "total"},
    {"filter": "datum.total > 0"},
    {"window": [{"op": "rank", "as": "r"}], "sort": [{"field": "total", "order": "descending"}]},
    {"filter": "datum.r <= 15"},
    {"fold": ["male", "female"], "as": ["gender", "count"]}
  ],
  "mark": "bar",
  "encoding": {
    "x": {"field": "poe", "type": "nominal", "title": "Point of Entry"},
    "y": {"field": "count", "type": "quantitative", "title": "Arrivals"},
    "color": {"field": "gender", "type": "nominal", "title": "Gender", "scale": {"range": ["#1f77b4","#ff7f0e"]}},
    "tooltip": [{"field": "poe"}, {"field": "gender"}, {"field": "count", "type": "quantitative", "format": ","}]
  }
}
